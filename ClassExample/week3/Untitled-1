    <title>My App</title>

    <style>
        /* Enter CSS below */
    </style>

 </head>


<body>
    
    <!-- This is a HTML comment -->

    <h1>My App</h1>

    <p><i>Description goes here</i></p>
    
    
    <button type="button" onclick="sayHello('Zeven')">Click here to say hello</button>

    <script>
       /* Comment: Enter code below */
        
       //This is a single line comment for JavaScript
        
        
        
        /*after declare the function and remember to Call function*/
        
        var greeting = "goodbye ";
        
        function printMessage(){
            console.log("print a message");
        }
        
        
        function sayHello(name){
            
            var message = "Hello " + name + "!"
            console.log(message);
            
        }
        
        
        function sayGreeting(name){
            
            var message = greeting + name + "!"
            console.log(message)
            
        }
        
        
        function addNumber(add1,add2){
            var addition = add1 + add2;
            console.log(addition);
        
        }
        
        
        function addReturn(add1,add2){
            var addition = add1 + add2;
            return addition;
            
        }
        
        //place functions above
        
        
        //call funciton here
        
        printMessage();
        
        sayHello("Kenyetta");
        sayHello("Lena");
        
        sayGreeting("Kim");
        sayGreeting("Zeven");
        
        //message doesn't exist in this scope 
        //console.log(message);
        
        addNumber(1,2);
        addNumber(20,30);
        
        console.log(addReturn(12,15));
        
        var firstAdd = addReturn(14,4);
        var secondAdd = addReturn(1,1);
        var thirdAdd = addReturn(firstAdd,secondAdd);
        console.log(thirdAdd);
       
        
        
        
        
    </script>

</body>

